<!DOCTYPE html>
<html>
  <head>
  <meta charset="utf-8">
  <link href="https://fonts.googleapis.com/css?family=Mirza" rel="stylesheet">
  <link href="http://localhost:5004/content/css/application.css" rel="stylesheet" type="text/css" media="screen">
  <script type="text/javascript">
    var insertHTML = function() {
      var s = "@Model.html";
      s = s.replace(/&lt;/g, "<");
      s = s.replace(/&gt;/g, ">");
      console.log(s);

      document.getElementById("shield").innerHTML = s;
    }
  </script>
  </head>
  <body onload="insertHTML()" >
    <div class="main-container">
          <div class="epic">
            <!-- epic blazon -->
          </div>
          <div class='option-wrap'>
            <div class="option1">Blazon</div>
            <div class="rules"><a href="https://techdaly.github.io/arms-rules/">Rules</a></div>
            <div class="option2">Quick Blazon</div>
          </div>
            <div class="results">
              <div class="image-fix">
                <img src="http://localhost:5004/content/img/cartoucheborder.png" alt="shape fix, ignore">
                <img src="http://localhost:5004/content/img/heaterborder.png" alt="shape fix, ignore">
                <img src="http://localhost:5004/content/img/iberianborder.png" alt="shape fix, ignore">
                <img src="http://localhost:5004/content/img/lozengeborder.png" alt="shape fix, ignore">
                <img src="http://localhost:5004/content/img/swissborder.png" alt="shape fix, ignore">
              </div>

              <div class="container">
                <div class="shield-box">
                  <div class="shape cartouche"></div>
                  <div class="shield">
                    <div id="shield" style="height: 500px; width: 400px; position: relative;"></div>
                  </div>
                </div>
                <div class="form-box">
                  <form action="/blazon" method="post" id="form1">
                    <input class="blaze-string" type="text" name="blazon-string" value="@Model.newBlazon">
                    <input hidden name="div-value" value="height: 500px; width: 400px; position: relative;">
                    <input class="special-form" type="text" name="shield-shape" id="special-form" value="@Model.shieldShape">
                    <button name="submit craft-btn">Craft</button>
                  </form>
                  <form action = "/save" method = "post">
                    <label>Name your new Coat of Arms</label>
                    <input type="text" name="blazon-name">
                    <input hidden type="text" name="blazon-blazon" value="@Model.newBlazon">
                  <button name="button">Save</button>
                </div>
                <div class="menu">
                    <div class="buttons shape-left" name="submit" form="form1">
                      <img src="http://localhost:5004/content/img/left.png" alt="left arrow">
                    </div> <!-- button left -->
                    <p class="label">Shape</p>
                    <div class="buttons shape-right" name="submit" form="form1">
                      <img src="http://localhost:5004/content/img/right.png" alt="right arrow">
                    </div> <!-- button right -->
                </div> <!-- menu -->
              </div>
            </div>
              <div class="saved-results">
                <h1>Saved Blazons</h1>
                </br>
                <ol>@foreach(var blazon in @Model.allBlazons)
                {
                  <li>@blazon.name | @blazon.blazon</li>
                }
                </ol>
                <form action="delete" method="post">
                  <button type="submit" name="button">delete all</button>
                </form>
              </div>
            </div>
    <script src="http://localhost:5004/content/js/jquery-3.1.0.js"></script>
    <script src="http://localhost:5004/content/js/maskscripts.js"></script>
  </body>
</html>
